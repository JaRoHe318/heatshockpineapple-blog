---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404: Experiment Failed" wide={true}>
  <div class="error-container">
    <h1 class="error-code">404</h1>
    <h2 class="error-title">Sample Not Found</h2>
    <p class="error-desc">
      The protocol you are looking for has been moved, deleted, or dissolved in solution.
    </p>
    <a href="/" class="return-btn">Return to Safety</a>
  </div>
</BaseLayout>

<style>
  .error-container {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .error-code {
    font-family: var(--font-mono);
    font-size: 8rem;
    line-height: 1;
    color: var(--accent-primary); /* Red for Error */
    opacity: 0.2;
    margin: 0;
  }

  .error-title {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    color: var(--text-main);
    margin: -2rem 0 1rem;
    z-index: 2;
  }

  .error-desc {
    font-family: var(--font-sans);
    color: var(--text-muted);
    max-width: 40ch;
    margin-bottom: 2rem;
  }

  .return-btn {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background: var(--accent-nature);
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    transition: background 0.2s;
  }
  .return-btn:hover { background: var(--accent-primary); }
</style>