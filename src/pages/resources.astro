---
import BaseLayout from '../layouts/BaseLayout.astro';
import resources from '../data/resources.json';
---

<BaseLayout title="Resources" description="Curated tools and references." wide={true}>
  
  <header class="page-header">
    <div class="header-content">
      <h1>Resources</h1>
      <p class="subtitle">A digital toolbox for physics, code, and capture.</p>
    </div>
  </header>

  <div class="inventory-container">
    {resources.map((section) => (
      <div class="inventory-section">
        <h2 class="section-title">{section.category}</h2>
        
        <ul class="resource-list">
          {section.links.map((link) => (
            <li class="resource-item">
              <a href={link.url} target="_blank" rel="noopener noreferrer" class="resource-link">
                <div class="link-main">
                  <span class="link-title">
                    {link.title}
                    <span class="external-icon">â†—</span>
                  </span>
                  <p class="link-desc">{link.desc}</p>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>

</BaseLayout>

<style>
  /* Page Header */
  .page-header { margin-top: 4rem; margin-bottom: 3rem; padding: 0 1rem; }
  h1 { font-family: var(--font-serif); font-size: 3rem; color: var(--text-main); margin-bottom: 0.5rem; }
  .subtitle { font-family: var(--font-mono); color: var(--text-muted); }

  /* The Main Container (White Paper) */
  .inventory-container {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.02);
    margin-bottom: 5rem;
  }
  @media (min-width: 900px) { .inventory-container { padding: 4rem; } }

  /* Sections */
  .inventory-section { margin-bottom: 4rem; }
  .inventory-section:last-child { margin-bottom: 0; }

  .section-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    color: var(--text-main);
    margin-bottom: 1.5rem;
    border-bottom: 2px solid var(--border);
    padding-bottom: 0.5rem;
  }

  /* The List */
  .resource-list { list-style: none; padding: 0; margin: 0; }

  .resource-item {
    border-bottom: 1px solid var(--border);
    transition: background-color 0.2s;
  }
  .resource-item:last-child { border-bottom: none; }
  .resource-item:hover { background-color: var(--bg-paper); /* Subtle highlight on hover */ }

  .resource-link {
    display: block;
    text-decoration: none;
    padding: 1.5rem 0.5rem;
  }

  .link-main {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  /* Desktop Layout: Title Left, Desc Right */
  @media (min-width: 768px) {
    .link-main {
      flex-direction: row;
      align-items: baseline;
      justify-content: space-between;
      gap: 2rem;
    }
    
    .link-title { flex-shrink: 0; width: 30%; }
    .link-desc { flex-grow: 1; }
  }

/* Typography */
  .link-title {
    font-family: var(--font-serif);
    font-size: 1.2rem;
    font-weight: 600; /* Made slightly bolder */
    
    /* CHANGE: Use Nature Green by default */
    color: var(--accent-nature); 
    
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  /* INTERACTION: Turn Red on Hover */
  .resource-link:hover .link-title {
    color: var(--accent-primary);
  }

  .external-icon {
    font-size: 0.8rem;
    opacity: 0.5;
    transition: transform 0.2s;
    color: var(--text-muted);
  }
  
  /* Icon also turns red on hover */
  .resource-link:hover .external-icon { 
    transform: translate(2px, -2px); 
    opacity: 1; 
    color: var(--accent-primary);
  }

  .link-desc {
    font-family: var(--font-sans);
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin: 0;
  }
</style>