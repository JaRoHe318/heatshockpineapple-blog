<div class="search-wrap" data-search>
  <input
    type="text"
    id="search-input"
    placeholder="Type to search..."
    autocomplete="off"
    spellcheck="false"
    aria-label="Search posts"
  />

  <div id="results-container" class="results-container">
    <div class="empty-state">Start typing to search...</div>
  </div>
</div>

<script type="module">
  async function initSearch() {
    const root = document.querySelector('[data-search]');
    if (!root) return;

    const input = root.querySelector('#search-input');
    const container = root.querySelector('#results-container');
    if (!input || !container) return;

    // Prevent double-init
    if (input.dataset.searchInit === '1') return;
    input.dataset.searchInit = '1';

    // REMOVED: input.focus() to prevent jumpiness on load.

    let pagefind;
    try {
      pagefind = await import('/pagefind/pagefind.js');
      await pagefind.init();
    } catch (e) {
      console.warn('[Search] Pagefind load failed:', e);
      container.innerHTML = `<div class="empty-state">Search index missing. Run build.</div>`;
      return;
    }

    let debounceTimer;
    let lastRequestId = 0;

    async function runSearch(raw) {
      const query = (raw || '').trim();
      const requestId = ++lastRequestId;

      if (!query) {
        container.innerHTML = `<div class="empty-state">Start typing to search...</div>`;
        return;
      }

      container.innerHTML = `<div class="empty-state">Searching...</div>`;

      try {
        const search = await pagefind.search(query);
        if (requestId !== lastRequestId) return;

        const results = await Promise.all(
          (search?.results || []).slice(0, 5).map((r) => r.data())
        );
        if (requestId !== lastRequestId) return;

        if (!results.length) {
          container.innerHTML = `<div class="empty-state">No results found.</div>`;
          return;
        }

        container.innerHTML = results.map((item) => {
          const title = item?.meta?.title ?? 'Untitled';
          const url = item?.url ?? '#';
          const excerpt = item?.excerpt ?? '';
          return `
            <a href="${url}" class="result-item">
              <div class="result-title">${title}</div>
              <div class="result-excerpt">${excerpt}</div>
            </a>
          `;
        }).join('');
      } catch (err) {
        if (requestId !== lastRequestId) return;
        console.warn('[Search] Query failed:', err);
        container.innerHTML = `<div class="empty-state">Error searching.</div>`;
      }
    }

    input.addEventListener('input', (e) => {
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => runSearch(e.target.value), 120);
    });
  }

  initSearch();
  document.addEventListener('astro:page-load', initSearch);
  document.addEventListener('astro:after-swap', initSearch);
</script>

<style>
