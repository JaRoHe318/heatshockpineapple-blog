---
const today = new Date();
---

<footer class="site-footer">
  <div class="footer-inner">
    
    <div class="footer-brand-col">
      <div class="footer-brand">
        <span class="brand-text">Heat Shock <span class="gold">Pineapple</span></span>
      </div>
      <div class="copyright">
        &copy; {today.getFullYear()} Jason Hernandez. All rights reserved.
      </div>
    </div>

    <div class="footer-links-col">
      <ul class="link-list">
        <li><a href="https://github.com/yourusername" target="_blank">GitHub</a></li>
        <li><a href="https://yourname.substack.com" target="_blank">Substack</a></li>
        <li><a href="https://linkedin.com/in/yourusername" target="_blank">LinkedIn</a></li>
        <li><a href="mailto:jrh@heatshockpineapple.com">Email</a></li>
      </ul>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    /* Locked to Deep Jungle Green */
    background: #243b30; 
    color: #fff;
    padding: 2.5rem 0; /* Reduced padding for a slimmer look */
    margin-top: auto;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .footer-inner {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Desktop: Side-by-side layout */
  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: center; /* Vertically center them */
      gap: 0;
    }
  }

  /* BRAND COLUMN */
  .footer-brand-col {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-brand {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: #ffffff;
    word-spacing: -0.15em;
  }
  
  .gold { 
    color: var(--accent-secondary); 
    font-style: normal; 
    font-size: 1.02em;
    
    /* Remove manual margin */
    margin-left: 0;
  }

  .copyright {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* LINKS COLUMN */
  .footer-links-col {
    display: flex;
    align-items: center;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap; /* Allows wrapping on tiny screens */
    gap: 2rem; /* Nice spacing between links */
  }

  .link-list li { display: flex; align-items: center; }

  .link-list a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-family: var(--font-sans);
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .link-list a:hover { 
    color: #ffffff; 
    /* Optional: Add a subtle gold underline on hover? */
    /* border-bottom: 1px solid var(--accent-secondary); */
  }
</style>